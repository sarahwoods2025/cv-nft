<!doctype html>
<html>
<head>
  <meta charset="utf-8"/>
  <title>Mint CV NFT</title>
  <link rel="stylesheet" href="/css/styles.css"/>
  <script src="https://cdn.jsdelivr.net/npm/ethers@5.7.2/dist/ethers.umd.min.js"></script>
</head>
<body>
  <%- include('../partials/header') %>

  <main class="container">
  <section class="card glow center">
    <img src="/img/SW-logo.png" alt="CV preview" class="cv-img" />

    <div class="row center">
      <label for="recruiterInput">Choose recruiter:</label>
      <select id="recruiterInput" class="form-control">
        <option value="DreamJob">DreamJob</option>
      </select>
    </div>

    <div class="row center">
      <button type="button" id="connectBtn" class="btn">Connect Wallet</button>
      <button type="submit" id="mintBtn" class="btn">Mint</button>
    </div>

    <p id="status"></p>
    <p id="accountSpan"></p>
  </section>
</main>


  <%- include('../partials/footer') %>

  <!-- Inject config for wallet.js -->
  <script>
    window.__DAPP_CONFIG__ = {
      CONTRACT_ADDRESS: "<%= CONTRACT_ADDRESS %>",
      CHAIN_ID_DEC: Number("<%= CONTRACT_CHAIN_ID %>"),
      DEFAULT_RECRUITER: "<%= DEFAULT_RECRUITER %>",
      DEFAULT_BPS: Number("<%= DEFAULT_BPS %>"),
      TOKEN_URI: "<%= TOKEN_URI %>"
    };
  </script>

  <!-- Load wallet + mint logic -->
  <script src="/js/wallet.js"></script>
</body>
</html>
